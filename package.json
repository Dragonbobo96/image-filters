{
  "name": "image-filters",
  "version": "1.0.0",
  "description": "Small image filters library",
  "main": "src/index.js",
  "scripts": {
    "eslint": "eslint src/**/*.js",
    "build": "npm run eslint && npm run build:editor & npm run build:simple",
    "build:editor": "browserify sandbox/editor/sandbox.js > sandbox/editor/bundle.js",
    "build:simple": "browserify sandbox/simple/sandbox.js > sandbox/simple/bundle.js",
    "test": "./node_modules/.bin/karma start",
    "codecov": "cat coverage/*/lcov.info | ./node_modules/codecov.io/bin/codecov.io.js",
    "serve": "http-server sandbox"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "image",
    "filter",
    "filters",
    "processing",
    "manipulation",
    "transformation",
    "pixel"
  ],
  "devDependencies": {
    "browserify": "^13.1.1",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "codecov.io": "^0.1.6",
    "eslint": "^3.13.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.3",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.2",
    "karma-coverage": "^0.5.5",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.5",
    "proxyquire": "^1.7.10",
    "proxyquire-universal": "^1.0.8",
    "proxyquireify": "^3.2.1",
    "sinon": "^1.17.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "image-filter-core": "^2.0.0",
    "image-filter-brightness": "^1.0.0",
    "image-filter-contrast": "^1.0.0",
    "image-filter-grayscale": "^1.0.0",
    "image-filter-threshold": "^2.0.0",
    "image-filter-sepia": "^1.0.0",
    "image-filter-color": "^1.0.0",
    "image-filter-gamma": "^1.0.0",
    "image-filter-invert": "^1.0.0",
    "image-filter-colorize": "^1.0.0"
  }
}
